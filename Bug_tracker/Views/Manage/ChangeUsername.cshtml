@model Bug_tracker.Models.ChangeUsernameViewModel
@{
    ViewBag.Title = "ChangeUsername";
}

<h2>Change Username</h2>


@using (Html.BeginForm("ChangeUsername", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    
   
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.EditorFor(m => m.NewUsername, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Username" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}