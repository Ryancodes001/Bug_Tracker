@model Bug_tracker.Models.CodeFirst.Ticket

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Title</h2>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Assigned to
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssignedToUser.DisplayName)
        </dd>

        <dt>
            Submitter
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OwnerUser.DisplayName)
        </dd>

        <dt>
            Project Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.Title)
        </dd>

        <dt>
           Priority
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketPriority.Name)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketStatus.Name)
        </dd>

        <dt>
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TicketType.Name)
        </dd>

        <dt>
            Ticket Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
           Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
           Created
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            Updated
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Updated)
        </dd>

    </dl>
</div>
<h4>Ticket Comments</h4>
@Html.ActionLink("Leave a Comment", "Create", "TicketComments", new { id = Model.Id }, null) 
<div>
    @foreach (var c in Model.TicketComments)
    {
        @c.Body <br/>
    }
</div>
<h4>Ticket Attachments</h4> 
@Html.ActionLink("Leave an Attachment", "Create", "TicketAttachments", new { id = Model.Id }, null) 
<br/>
<div>
        @foreach (var a in Model.TicketAttachments)
        {
             <a href="@a.FilePath">@a.Description</a>  <br />
        }
</div>
<br/>
<p>
   
   
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) 
    

        @Html.ActionLink("Back to List", "Index")
</p>
